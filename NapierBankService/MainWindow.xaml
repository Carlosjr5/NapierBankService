<Window x:Class="NapierBankService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NapierBankService"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="upload" >
        <TextBox x:Name="body_txtbox" HorizontalAlignment="Left" Height="98" Margin="93,261,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="231"/>
        <TextBox x:Name="header_txtblock" HorizontalAlignment="Left" Height="37" Margin="93,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144"/>
        <Button x:Name="send_btn" Content="Button" HorizontalAlignment="Left" Height="42" Margin="654,382,0,0" VerticalAlignment="Top" Width="110" Click="send_btn_Click"/>
        <ListBox x:Name="data_listbox" HorizontalAlignment="Left" Height="171" Margin="552,36,0,0" VerticalAlignment="Top" Width="128" MouseDoubleClick="ChoseItem"/>
        <TextBox x:Name="user_txtbox" HorizontalAlignment="Left" Height="35" Margin="93,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="281"/>
        <ListBox x:Name="mention_list" HorizontalAlignment="Left" Height="117" Margin="445,251,0,0" VerticalAlignment="Top" Width="127" MouseDoubleClick="TxtItem"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="552,9,0,0" VerticalAlignment="Top" Width="128" Height="25" Click="Button_Click"/>
        <ListBox x:Name="txt_list" Margin="282,16,282,283" MouseDoubleClick="TxtItem" />
        <TextBox x:Name="subject_txtbox" HorizontalAlignment="Left" Height="31" Margin="93,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="231"/>
        <Label Content="Subject:" HorizontalAlignment="Left" Height="28" Margin="41,225,0,0" VerticalAlignment="Top" Width="144"/>
        <Label Content="Message:" HorizontalAlignment="Left" Height="28" Margin="37,258,0,0" VerticalAlignment="Top" Width="144"/>
        <Label x:Name="Sender" Content="Sender:" HorizontalAlignment="Left" Height="25" Margin="41,172,0,0" VerticalAlignment="Top" Width="154"/>
        <Label Content="ID:" HorizontalAlignment="Left" Height="25" Margin="69,104,0,0" VerticalAlignment="Top" Width="40"/>

    </Grid>
</Window>
